{
    "manifest_version": 3,
    "name": "Break Reminder",
    "version": "1.0",
    "description": "Reminds you to take breaks while browsing.",
    "permissions": ["storage", "alarms", "notifications"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }